<% include common/header.ejs %>

<!-- /.container -->
<div class="container main_article">
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <!-- 媒体对象列表 -->
            <ul class="media-list">
                <% for(var i = 0;i < articles.length;i++){ %>
                <li class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object" src="/img/02.jpeg" alt="...">
                        </a>
                    </div>
                    <div class="media-body">
                        <a href="/article/<%= articles[i].id %>">
                            <h3 class="media-heading  media-heading"><%= articles[i].title %></h3>
                            <h5 class="main_date">·&nbsp;&nbsp;<%= articles[i].updateTime %></h5>
                            <p class="letterspacing"> <%= articles[i].description %></p>
                        </a>
                    </div>
                    <hr class="split">
                    <div>
                        <div class="col-md-9 tags">
                            <% for(var j = 0;j < articles[i].tags.length;j++){ %>
                            <a href="#">
                                <i class="fa fa-tags" aria-hidden="true">&nbsp;</i><%= articles[i].tags[j] %></a>&nbsp;
                            <% } %>
                        </div>
                        <div class="col-md-3">
                            <p class="btn pull-right  btn_content_style" href="#" role="button">阅读全文 &gt;</p>
                        </div>
                    </div>

                </li>
                <% } %>
            </ul>
            <!-- 分页的实现 -->

            <div class="paging">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- col-md-8 -->
        <!-- 侧栏 -->
        <div class="col-md-4">
            <!-- 搜索框 -->
            <div class="search bar">
                <form>
                    <div class="wrapbar">
                        <input type="text" placeholder="请输入您要搜索的内容...">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    </div>
                </form>
            </div>
            <!-- 个人简介 -->
            <div class="introduce">
                <h3 class="line">
                    <b>简介:</b>
                </h3>
                <p>本博客分享自己所了解的前端知识,以及一些常见的问题的解决方法,并希望能够与大家积极交流,彼此之间不断进步.</p>
            </div>
            <!-- 分类 -->
            <div class="sort">
                <h3 class="line">
                    <b>文章分类</b>
                </h3>
                <div class="list-group">
                    <!-- <a href="#" class="list-group-item active"> -->
                    <a href="/front_list" class="list-group-item">
                        前端知识
                        <span class="badge">1</span>
                    </a>
                    <a href="/problem_list" class="list-group-item">问题解决
                        <span class="badge">1</span>
                    </a>
                    <a href="#" class="list-group-item">文章转发
                        <span class="badge"></span>
                    </a>
                    <a href="#" class="list-group-item">常用组件
                        <span class="badge"></span>
                    </a>
                </div>
            </div>

            <!-- 标签 -->
            <div class="tag">
                <h3 class="line">
                    <b>标签</b>
                </h3>
                <a class="btn btn-default btn_style" href="#" role="button">HTML</a>
                <a class="btn btn-default btn_style" href="#" role="button">CSS</a>
                <a class="btn btn-default btn_style" href="#" role="button">JavaScript</a>
                <a class="btn btn-default btn_style" href="#" role="button">组件</a>
                <a class="btn btn-default btn_style" href="#" role="button">总结</a>
            </div>
        </div>
        <!-- col-md-4 -->
    </div>
    <!-- row-->
</div>
<!--container-->
<% include common/footer.ejs %>