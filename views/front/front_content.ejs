                <a class="btn btn-default btn_style" href="#" role="button"><%= tags[i] %></a>
                <% } %>
                <br><br>
                <b>个人分类： </b>
                <a href="#"><%= archives %></a>
            </div>
        </div>
        <!-- col-md-8 -->
        <% include ../common/sidebar.ejs %>
    </div>
    <!-- row-->
</div>
